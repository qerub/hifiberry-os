#!/bin/bash
set -e
if [ "$1" == "" ]; then
 echo Command line argumnents: piversion [timestamp]
 exit 1
fi 

if [ "$2" == "" ]; then
 TS=`date +%Y%m%d`
else
 TS=$2
fi

cd `dirname $0`
clear
echo Building for Raspberry Pi $1
echo ============================
echo
./build-config $1
./clean $1
./compile $1
./create-image $1 $TS
echo $TS > images/VERSION
echo "UPDATER$1=updater-$TS-pi$1.tar.gz" >> images/listing
